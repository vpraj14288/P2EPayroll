
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/KiwiScripts/ChangePasswordjs")
<form id="frmChangePassword">
    <div class="inner-right change-passwordpage">
        <div class="right-innerarea">
            <div class="page-title clearfix">
                <div class="col-sx-12 col-sm-8 col-md-6 col-lg-6 client-img">
                    <div class="title-img">
                        <img src="images/kfc.png" alt="KFC" />
                        <a class="edit-img" href="#" title="Edit">Edit</a>
                    </div>
                    <h2>Change Password</h2>
                </div>
            </div>
            <p class="validate-text">The new IPIN should be different from last pin used.</p>

            <div class="input">
                <input type="text" name="oldpassword" id="txtOldPassword" placeholder="Old Password*" required />
            </div>

            <div class="input">
                <input type="text" placeholder="New Password*" id="txtPassword" required name="password"/>
            </div>

            <div class="input">
                <input type="text" name="password_confirm" id="txtConfirmPassword" placeholder="Confirm Password*" required />
            </div>

            <div class="submit button-btn">
                <input class="btn-cancel" type="reset" value="cancel" />
                <input class="btn-submit" type="submit" value="Save" />
            </div>

        </div>
    </div>
</form>